################################################################
genrule(
    name = "mkhdrs",
    srcs = [
        "//src/lib/starlark:debug.c",
        "lex_file.c",
        "lua_file.c",
        "parse_file.c",
    ],
    outs = [
        "lex_file.h",
        "lua_file.h",
        "parse_file.h",
    ],
    cmd = "\n".join([
        "SRC1=$(location lex_file.c)",
        "SRCDIR1=`dirname $$SRC1`",
        "$(location //vendored/makeheaders) \\",
        "    $(location //src/lib/starlark:debug.c) \\",
        "    $(location lex_file.c) \\",
        "    $(location lua_file.c) \\",
        "    $(location parse_file.c)",
        "cp $${SRCDIR1}/*.h $(@D)",
    ]),
    tools = ["//vendored/makeheaders"],
    visibility = ["//visibility:public"]
)
