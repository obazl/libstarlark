        "-I", "vendored/lua-5.4.3/src",

        "-I", "external/uthash/include",
    ],
    deps = [
        # "//src:starlark",
        "//src/lua:starlark_lua",
        "//vendored/logc",
        "//vendored/lua-5.4.3/src:lua"
    ],
