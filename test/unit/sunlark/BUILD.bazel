################################################################
genrule(
    name = "mkhdrs",
    srcs = [
        "//sealark:debug.c",
        "bindings.c",
        "definitions.c",
        "loads.c",
        "paths_tetradic.c",
        "targets.c",
    ],
    outs = [
        "bindings.h",
        "definitions.h",
        "loads.h",
        "paths_tetradic.h",
        "targets.h",
    ],
    cmd = "\n".join([
        "SRC1=$(location paths_tetradic.c)",
        "SRCDIR1=`dirname $$SRC1`",
        "$(location //vendored/makeheaders) \\",
        "    $(location //sealark:debug.c) \\",
        "    $(location bindings.c) \\",
        "    $(location definitions.c) \\",
        "    $(location loads.c) \\",
        "    $(location paths_tetradic.c) \\",
        "    $(location targets.c)",
        "cp $${SRCDIR1}/*.h $(@D)",
    ]),
    tools = ["//vendored/makeheaders"],
    visibility = ["//visibility:public"]
)
