load("@rules_cc//cc:defs.bzl", "cc_library")
load("@bazel_skylib//rules:common_settings.bzl", "string_list_flag")

load("//:BUILD.bzl", DEFINES="debug_defs")
load(":BUILD.bzl", "gensyntax")

exports_files(glob(["*.c"]))

## to enable parser/lexer debugging pass --//sealark:debug=bindings,vectors,...
string_list_flag(name = "yydebug", build_setting_default = [])
config_setting(name = "yydebug-targets", flag_values = {":yydebug": "targets"})
config_setting(name = "yydebug-loads", flag_values = {":yydebug": "loads"})
config_setting(name = "yydebug-vectors", flag_values = {":yydebug": "vectors"})

pubic_header = "sealark.h"

###########
cc_library(
    name  = "sealark",
    alwayslink = True,
    linkstatic = 1,
    srcs  = [
        "debug.c",  # select
        "debug.h",  # select
        "expressors.c",
        "expressors.h",
        "expressors_load.c",
        "expressors_load.h",
        "expressors_target.c",
        "expressors_target.h",
        "nodes.c",
        "nodes.h",
        "parse.c",
        "parse.h",
        "predicators.c",
        "predicators.h",
        "sealark_bindings.c",
        "sealark_bindings.h",
        "sealark_targets.c",
        "sealark_targets.h",
        "sealark_serializers.c",
        "sealark_serializers.h",
        "vectors.c",
        "vectors.h",
        "//vendored/logc:log.h"
   ],
    hdrs = [pubic_header],
    defines = DEFINES,
    copts = select({
        # strdup is non-standard, not supported on linux in strict c11 mode
        "//bzl/host:macos": ["-std=c11"],
        "//bzl/host:linux": ["-std=gnu11"],
        "//conditions:default": ["-std=c11"],
    }) + [
        "-g", "-O0",
        "-pedantic-errors",
        "-I", ".",
        "-I", "$(GENDIR)/sealark",
        "-I", "$(GENDIR)/external/moonlark/sealark",

        "-I", "vendored/uthash",
        "-I", "external/moonlark/vendored/uthash",

        "-I", "vendored/logc",
        "-I", "external/moonlark/vendored/logc",
    ],
    deps = [
        ":lexis",
        ":syntaxis",
        "//vendored/logc",
        "//vendored/uthash"
    ],
    visibility = ["//visibility:public"]
)

