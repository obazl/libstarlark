########
genrule(
    name = "gen_lexer",
    srcs = [
        "lexer.re",
        # "test.re",
    ],
    tools = ["//external/re2c"],
    outs  = [
        "lexer.c"
    ],
    cmd   = "\n".join([
        "for f in $(locations //external/re2c)",
        "do",
        "    if [ -f $$f ]",
        "    then",
        "        if [ re2c = `basename $$f` -a -x $$f ]",
        "        then",
        "            break",
        "        fi",
        "    fi",
        "done",
        "$$f --conditions --tags -o $(@D)/lexer.c $(location lexer.re)",
    ]),
    visibility = ["//visibility:public"]
)

########
genrule(
    name = "mkhdrs",
    srcs = [
        "starlark.c",
        "lexer.c",
        "nodes.c",
        "parser.c",
        "serialize.c",
        "token_debug.c",
        "test_lex.c",
        "test_parse.c",
    ],
    outs = [
        "starlark.h",
        "lexer.h",
        "nodes.h",
        "parser.h",
        "serialize.h",
        "token_debug.h",
        "test_lex.h",
        "test_parse.h"
    ],
    cmd = "\n".join([
        "SRC1=$(location starlark.c)",
        "SRCDIR1=`dirname $$SRC1`",
        "$(location @makeheaders//:makeheaders) \\",
        "    $(location starlark.c) \\",
        "    $(location lexer.c) \\",
        "    $(location nodes.c) \\",
        "    $(location parser.c) \\",
        "    $(location serialize.c) \\",
        "    $(location token_debug.c) \\",
        "    $(location test_lex.c) \\",
        "    $(location test_parse.c)",
        "cp $${SRCDIR1}/*.h $(@D)",
    ]),
    tools = ["@makeheaders//:makeheaders"],
    visibility = ["//visibility:public"]
)

