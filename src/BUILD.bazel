    name  = "starlark",
    # alwayslink = True,
    linkstatic = 1,
    srcs  = [
        "starlark.c",
        "starlark.h",
        "serialize.c",
        "serialize.h",
    ],
    hdrs = [
        "@uthash//:include",
        "//vendored/logc:log.h"
    ],
    defines = select({
        "//bzl/host:debug": ["DEBUG_TRACE"],
        "//conditions:default":   []
    }),
    copts = [
        "-std=c11",
        "-g", "-O0",
        "-I", ".",
        "-I", "$(GENDIR)/src",
        "-I", "$(GENDIR)/external/obazl/src",
        "-I", "$(GENDIR)/external/tools_obazl/src",

        "-I", "external/uthash/include",
        "-I", "vendored/logc",
        "-I", "external/obazl/vendored/logc",
        "-I", "external/tools_obazl/vendored/logc"
    ],
    deps = [
        ":lexer",
        ":parser",
        "//vendored/logc"
    ],
    visibility = ["//visibility:public"]
)

##########
cc_library(
    name  = "parser",
    visibility = ["//visibility:public"],
    srcs  = [
        "parser.c",
        "parser.h",
        "nodes.c",
        "nodes.h",
        "@uthash//:include"
    ],
