    name  = "lexer",
    visibility = ["//visibility:public"],
    srcs  = [
        "lexer.c",
        "lexer.h",
        "nodes.c",
        "nodes.h",
        "token_debug.c",
        "token_debug.h",
        "@uthash//:include",
    ],
    copts = [
        "-std=c11",
        "-I", ".",
        "-I", "src",
        "-I", "$(GENDIR)/src",

        "-I", "external/uthash/include",
        "-I", "vendored/logc",
        "-I", "external/obazl/vendored/logc",
