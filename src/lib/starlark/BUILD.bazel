load("@rules_cc//cc:defs.bzl", "cc_library")

exports_files(glob(["*.c"]))

##########
cc_library(
    name  = "starlark",
    alwayslink = True,
    linkstatic = 1,
    srcs  = [
        # "constants.c",
        # "constants.h",
        "nodes.c",
        "nodes.h",
        "parse.c",
        "parse.h",          # local impl hdr
        "serialize.c",
        "serialize.h",
        "@uthash//:include",
        "//vendored/logc:log.h"
   ],
    hdrs = [
        "starlark.h",           # api hdr
    ],
    defines = select({
        "//bzl/host:debug": ["DEBUG_TRACE"],
        "//conditions:default":   []
    }),
    copts = [
        "-std=c11",
        "-g", "-O0",
        "-pedantic-errors",
        "-I", ".",
        "-I", "$(GENDIR)/src/lib/starlark",
        "-I", "$(GENDIR)/external/libstarlark/src",

        "-I", "external/uthash/include",

        "-I", "vendored/logc",
        "-I", "external/libstarlark/vendored/logc",
    ],
    deps = [
        ":lexis",
        ":syntaxis",
        "//vendored/logc"
    ],
    visibility = ["//visibility:public"]
)

##########
cc_library(
    name  = "syntaxis",
    visibility = ["//visibility:public"],
    srcs  = [
        "syntaxis.c",
        "syntaxis.h",
        "nodes.c",
        "nodes.h",
        "//vendored/logc:log.h",
        "@uthash//:include"
    ],
    copts = [
        "-std=c11",
        # "-g",

        "-I", ".",              # syntaxis.h

        # mkhdrs output:
