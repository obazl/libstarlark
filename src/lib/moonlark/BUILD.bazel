genrule(
    name = "mkhdrs",
    visibility = ["//visibility:public"],
    srcs = [
        "moonlark_api.c",
        "moonlark_config.c",
        # "lua_debug.c",
        "//src:debug.c",
        # "//src:nodes.c",
        "//src:starlark.h"
    ],
    outs = [
        "moonlark_api.h",
        "moonlark_config.h",
        # "lua_debug.h",
    ],
    cmd = "\n".join([
        "SRC1=$(location moonlark_api.c)",
        "SRCDIR1=`dirname $$SRC1`",
        "SRC2=$(location //src:debug.c)",
        "SRCDIR2=`dirname $$SRC2`",
        "$(location @makeheaders//:makeheaders) \\",
        "    $(location //src:debug.c) \\",
        # "    $(location //src:nodes.c) \\",
        "    $(location //src:starlark.h) \\",
        "    $(location moonlark_api.c) \\",
        "    $(location moonlark_config.c)",
        # "    $(location lua_debug.c)",
        "cp $$SRCDIR1/*.h $(@D)",
    ]),
    tools = ["@makeheaders//:makeheaders"]
)

