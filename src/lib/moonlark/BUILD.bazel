        "//src:nodes.c",
        "//src:syntaxis.h",
        "//src:serialize.c",
        # "//src:starlark.h"
        "@uthash//:include",
    ],
    outs = [
        "libmoonlark.h",
    ],
    cmd = "\n".join([
        "SRC1=$(location moonlark_api.c)",
        "SRCDIR1=`dirname $$SRC1`",
        "SRC2=$(location //src:debug.c)",
        "SRCDIR2=`dirname $$SRC2`",
        "$(location @makeheaders//:makeheaders) -H \\",
        "    $(locations @uthash//:include) \\",
